{
  "layer": "top",
  "margin-top": 10,
  "margin-left": 10,
  "margin-right": 10,
  "margin-bottom": 0,
  "reload-style-on-change": true,
  "modules-left": [
    "sway/workspaces",
    "sway/mode"
  ],
  "modules-center": [
    "sway/window"
  ],
  "modules-right": [
    "mpd",
    "network",
    "cpu",
    "memory",
    "disk",
    "battery",
    "sway/language",
    "clock"
  ],
  "mpd": {
    "format": "{title}",
    "format-disconnected": "",
    "tooltip-format": "{album} - {artist} - {title}",
    "on-click": "mpc toggle",
    "on-click-right": "mpc stop",
    "on-scroll-up": "volume +2",
    "on-scroll-down": "volume -2",
  },
  "network": {
    "format": "{essid}"
  },
  "cpu": {
    "format": "CPU {usage}%"
  },
  "memory": {
    "format": "RAM {percentage}%"
  },
  "disk": {
    "format": "/ {percentage_used}%"
  },
  "sway/language": {
    "format": "{short} {variant}"
  },
  "clock": {
    "format": "{:%Y-%m-%d %R}"
  }
}
