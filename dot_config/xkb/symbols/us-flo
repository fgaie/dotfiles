Partial modifier_keys
xkb_symbols "us-flo"
{
  include "us(dvp)"

  replace key <CAPS> { [ Escape    ] };

  replace key <RALT> { [ Shift_L, Shift_L ] };
  replace key <LALT> { [ Control_L, Control_L ] };
  replace key <LWIN> { [ Alt_L, Alt_L ] };
  replace key <LCTL> { [ Super_L, Super_L ] };

  modifier_map Shift   { Shift_L,   Shift_R   };
  modifier_map Control { Control_L, Control_R };
  modifier_map Mod1    { Alt_L   }; // alt
  modifier_map Mod4    { Super_L }; // super
};
